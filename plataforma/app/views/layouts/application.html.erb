<!DOCTYPE html>
<html>
  <head>
    <title>Plataforma</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>


    <span class="nav-bar" id="btnMenu"><i class="fas fa-bars"> Menu</i></span>
    <nav class="main-nav">
      <ul class="menu" id="menu">
        <li class="menu__item"><a  class="menu__link" <%= link_to "Variedades Mary", root_path%></a></li>
        <li class="menu__item container-submenu">
          <a href="#" class="menu__link submenu-btn">Productos</a>
          <ul class="submenu">
            <li class="menu__item">
              <a class="menu__link" <%= link_to "Crear Producto", new_product_path%></a>
            </li>
            <li class="menu__item">
              <a class="menu__link" <%= link_to "Mostrar Producto", products_path%></a>
            </li>
          </ul>
        </li>
        <li class="menu__item container-submenu">
          <a href="#" class="menu__link submenu-btn">Ventas</a>
          <ul class="submenu">
            <li class="menu__item">
              <a class="menu__link" <%= link_to "Mostrar Ventas", sale_index_path%></a>
            </li>
            <li class="menu__item">
              <a class="menu__link" <%= link_to "Crear Venta", new_sale_path%></a>
            </li>
          </ul>
        </li>
        <li class="menu__item container-submenu">

          <a href="#" class="menu__link submenu-btn">Proveedores</a>

          <ul class="submenu">
            <li class="menu__item"><a class="menu__link" <%= link_to "Crear Proveedores", new_supplier_path%> </a></li>
            <li class="menu__item"><a class="menu__link" <%= link_to "Mostrar Proveedores", suppliers_path%></a></li>
          </ul>
        </li>

        <li class="menu__item container-submenu">
          <a href="#" class="menu__link submenu-btn">PQR</a>
          <ul class="submenu">
            <li class="menu__item"><a class="menu__link" <%= link_to "Crear PQR", new_pqr_path%> </a></li>
            <li class="menu__item"><a class="menu__link" <%= link_to "Mostrar PQR", pqrs_path%></a></li>
          </ul>
        </li>
        <li class="menu__item"><a href="#" class="menu__link">Pedidos</a></li>
        <li class="menu__item container-submenu">
          <a href="#" class="menu__link submenu-btn"><i class="fas fa-user"></i></a>
          <ul class="submenu">

            <% if  user_signed_in?%>
              <li class="menu__item"><a class="menu__link" <%= link_to "Editar Perfil", edit_user_registration_path%></a></li>
              <li class="menu__item"><a class="menu__link" <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %></a></li>

              <% elsif %>
              <li class="menu__item"><a class="menu__link" <%= link_to "Iniciar Sesion", new_user_session_path%></a></li>
              <li class="menu__item"><a  class="menu__link" <%= link_to "Registrarme", new_user_registration_path %></a></li>

            <% end %>

          </ul>
        </li>
      </ul>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>



    <header>

    </header>
    <section>
      <%= yield %>
    </section>

    <footer>

      <%= javascript_pack_tag 'menu' %>




  </body>
</html>
