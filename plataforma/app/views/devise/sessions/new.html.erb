
  <div class="form_inicio_sesion">
    <h2>INICIAR SESION</h2><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'Correo electronico', :class => 'input_registro' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", :placeholder => 'ContraseÃ±a', :class => 'input_registro' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :'Recuerdame' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Iniciar Sesion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
