
<div class="form_registro">


  <h2>Registrarme</h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :fullname, :autofocus => true, :placeholder => 'Nombre Completo' %>
    </div>

    <div class="field">
      <%= f.text_field :telephone, :autofocus => true, :placeholder => 'Celular' %>
    </div>

    <div class="field">
      <%= f.label :'Sexo:' %>
      <%= f.select(:sex, ['Masculino', 'Femenino', 'Otro'])%>
    </div>

    <div class="field">
      <%= f.text_field :address, :autofocus => true, :placeholder => 'Direccion' %>
    </div>

    <div class="field">
      <%= f.label :'Fecha de nacimiento' %><br />
      <%= f.date_field :birth_date, :autofocus => true %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'Correo Electronico' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", :placeholder => 'Contraseña (Minimo 6 caracteres)' %>
    </div>

    <div class="field">
      <%= f.label :'Confirmar contraseña' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => 'Comfirmar contraseña' %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarme" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
